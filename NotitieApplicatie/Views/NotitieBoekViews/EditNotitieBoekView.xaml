<UserControl x:Class="NotitieApplicatie.Views.NotitieBoekViews.EditNotitieBoekView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotitieApplicatie.Views.NotitieBoekViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="13*"/>

        </Grid.ColumnDefinitions>

        <TextBlock Text="Naam"/>
        <TextBox  Text="{Binding GeselecteerdeNotitieBoek.Naam, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" ToolTip="{Binding GeselecteerdeNotitieBoek.ErrorCollection[Naam]}" />
      

        <TextBlock Text="Beschrijving" Grid.Row="1"/>
        <TextBox Text="{Binding GeselecteerdeNotitieBoek.Beschrijving ,ValidatesOnDataErrors=True,UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="1" ToolTip="{Binding GeselecteerdeNotitieBoek.ErrorCollection[Beschrijving]}"/>

        <TextBlock Text="Eigenaar" Grid.Row="2"/>
        <ComboBox Grid.Row="2" Grid.Column="2" ItemsSource="{Binding Eigenaars,ValidatesOnDataErrors=True}" DisplayMemberPath="Naam"  SelectedItem="{Binding GeselecteerdeNotitieBoek.Eigenaar, UpdateSourceTrigger=PropertyChanged}">

        </ComboBox>

        <Button Content="Bewaar" Command="{Binding BewaarCommand}" Grid.Row="3" Grid.Column="1"></Button>
        <Button Content="Cancel" Command="{Binding CancelCommand}" Grid.Row="3" Grid.Column="0"></Button>
    </Grid>

</UserControl>
